modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "pkg-config", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"cd /home/runner/workspace/backend && uvicorn app:app --host localhost --port 8000 & cd /home/runner/workspace/frontend && exec npm run dev -- --host 0.0.0.0 --port 5000\""
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
exposeLocalhost = true

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-lc", "cd backend && python -m uvicorn app:app --host 0.0.0.0 --port 5000"]
build = ["bash", "-lc", "cd frontend && npm ci && npm run build"]
